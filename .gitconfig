[user]
	name = Kylian Portron
	email = kylian.portron@protonmail.com
	username = Piittchoune
[alias]
	a = add --all
	f = fetch
	s = status
	logs = log --all --tags --oneline --graph 
[core]
	editor = vim
[init]
	defaultBranch = main
[color]
	ui = auto
[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green

[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold

[color "status"]
        added = yellow
        changed = green
        untracked = red
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[cola]
	spellcheck = false
	maxrecent = 6
[web]
        browser = firefox